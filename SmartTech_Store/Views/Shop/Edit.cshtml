@model Shop
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Shop</h1>

<form method="post" asp-action="Edit">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BrandId" class="form-label"></label>
        <select asp-for="BrandId" name="BrandId" class="form-control" asp-items="@ViewBag.Categories">
            <option selected value="">-- Select Category --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" name="Price" class="form-control"></input>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-dark">Back</a>

</form>