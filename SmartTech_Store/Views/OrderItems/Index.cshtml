@model IEnumerable<OrderItem>
@{
    ViewData["Title"] = "Index";
}

<h1>OrderItem</h1>

<div class="container-fluid">

    <div class="text-end mb-3">

        <a asp-controller="OrderItems" asp-action="Create" class="btn btn-outline-dark">Add</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductName</th>
                <th>Quantity</th>
                <th>UnitPrice</th>
                <th>Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var orderItem in Model)
            {

                <tr>
                    <td>@orderItem.Id</td>
                    <td>@orderItem.ProductName</td>
                    <td>@orderItem.Quantity</td>
                    <td>@orderItem.UnitPrice</td>
                    <td>@orderItem.Order?.CustomerName</td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@orderItem.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@orderItem.Id" class="btn btn-outline-danger">Delete</a>
                    </td>

                </tr>

            }


        </tbody>
    </table>
</div>