@model OrderItem
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit OrderItem</h1>

<form method="post" asp-action="Edit">

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" name="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" name="Quantity" class="form-control"></input>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" name="UnitPrice" class="form-control"></input>
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OrderId" class="form-label"></label>
        <select asp-for="OrderId" name="OrderId" class="form-control" asp-items="@ViewBag.Orders">
            <option selected value="">-- Select Order --</option>
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-dark">Back</a>

</form>