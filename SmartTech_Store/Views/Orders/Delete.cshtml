@model Order
@{
    ViewData["Title"] = "Delete";
}

<h1>Edit Order</h1>

<form method="post" asp-action="Delete">

    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" disabled name="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label"></label>
        <input asp-for="TotalAmount" disabled name="TotalAmount" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" disabled name="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-dark">Back</a>

</form>