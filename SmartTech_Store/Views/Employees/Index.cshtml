@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Employee</h1>

<div class="container-fluid">

    <div class="text-end mb-3">

        <a asp-controller="Employees" asp-action="Create" class="btn btn-outline-dark">Add New</a>

    </div>


    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Job</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Email</td>
                    <td>@employee.Password</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Department?.Name</td>
                    <td>@employee.Job?.Name</td>
                   
                    <td>
                        <a asp-action="Edit" asp-route-Id="@employee.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@employee.Id" class="btn btn-outline-danger">Delete</a>

                    </td>

                </tr>

            }


        </tbody>
    </table>
</div>